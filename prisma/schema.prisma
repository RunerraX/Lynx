generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model HomeworkExists {
  id             Int    @id @default(autoincrement())
  superID        String
  title          String
  forumChannelID String
  forumID        String
}

model Timeline {
  id          Int     @id @default(autoincrement())
  timeLineID  String  @db.Text
  title       String  @db.Text
  type        String  @db.Text
  text        String? @db.Text  // nullable
}

model Birthdays {
  id Int @id @default(autoincrement())
  userID String @db.Text
  date String @db.Text
  guildID String @db.Text
  channelID String @db.Text
  lastSent  DateTime? // nullable,
}

model Log {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  level     String
  message   String
  context   String? 
}